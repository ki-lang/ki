
header "sys" as sys;

fn sleep_ms(ms: uxx) void {
	#if OS == win
	sys.Sleep(ms @as u32);
	#else
	let msec = ms @as ixx;
	let ts = @stack_object(sys.cstruct_timespec);
    ts.tv_sec = msec / 1000;
    ts.tv_nsec = (msec % 1000) * 1000000;
    sys.nanosleep(ts, ts);
	#end
}

fn sleep_ns(ns: uxx) void {
	#if OS == win
	sys.Sleep(1);
	#else
	let nsec = ns @as ixx;
	let ts = @stack_object(sys.cstruct_timespec);
    ts.tv_sec = nsec / 1000000000;
    ts.tv_nsec = (nsec % 1000000000);
    sys.nanosleep(ts, ts);
	#end
}

fn !panic(msg: *String) void {
	print("PANIC ERROR : ");
	print(msg);
	print("\n");
	exit(1);
}

fn !exit(code: i32) void {
	sys.exit(code);
}

